<% @title="Compte Admin Action+" %>

<!-- component -->
<div class="h-screen md:flex">
	<div class="relative overflow-hidden md:flex w-1/3 bg-gradient-to-tr from-green-400 to-blue-600 i justify-around items-center hidden">
		<div class="container">

			<h1 class="text-white font-bold text-4xl font-sans"> 
        <div class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-pink-500 relative inline-block">
          <p class="relative text-white">Compte Admin Action<sup>+</sup></p>
        </div>
      </h1>
			<p class="text-black mt-1">Vous voulez contribuer à sauver des vies ? <br> Rejoignez les Admin de Action<sup>+</sup> !
<br> <span class="font-semibold underline"> C'est facile, gratuit et 1 minute suffira.</span></p>
			
    
		</div>
		<div class="absolute -bottom-32 -left-40 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -bottom-40 -left-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -top-40 -right-0 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
		<div class="absolute -top-20 -right-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
	</div>
	<div class="flex md:w-2/3 justify-center  items-center bg-white">
    <div class="flex md:w-2/3 justify-center  items-center bg-white mx-2">
	
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/flash/notices" %>
		<h1 class="text-gray-800 font-bold text-2xl mb-2">Vous et Action<sup>+</sup> Agisons Ensemble pour sauver des vies</h1>
		<p class="text-sm font-normal text-gray-600 mb-2">Devenez Administrateur Action<sup>+</sup></p>

			<div class="flex items-center mt-8 mb-2">
          <%= f.text_field :first_name, class:"placeholder:italic placeholder:text-black placeholder:pl-2 outline-none border rounded-md py-2 w-full", placeholder:"Nom ..." %>
          <%= f.text_field :last_name, class:"placeholder:italic placeholder:text-black placeholder:pl-2 outline-none border ml-2 rounded-md py-2 w-full", placeholder:"Prénom..." %>

      </div>
	
        <%= f.email_field :email, placeholder:"Addresse Email ...", class:"placeholder:italic placeholder:pl-2 placeholder:text-black flex outline-none border py-2 rounded-md w-full my-2" %>			
      
        
      <div class="flex w-full py-2 mb-2">
          <%= f.text_field  :country,
          class:"placeholder:italic placeholder:text-black  placeholder:pl-2 flex border py-2 rounded-md w-full outline-none", placeholder:"Pays de résidence Actuelle..." %>
        <%= f.text_field :full_contact, placeholder:"N° téléphone ...", class:"placeholder:text-black placeholder:pl-2 flex border py-2 ml-2 rounded-md w-full outline-none" %>	
      </div>
      <div class="">
        <%= f.password_field :password, class:"flex border py-2 rounded-md w-full placeholder:pl-2 placeholder:text-black placeholder:italic outline-none", placeholder:"Mot de passe ..." %>				
      </div>
      <div class="py-2">
        <%= f.password_field :password_confirmation, class:"flex border py-2 rounded-md w-full placeholder:pl-2 placeholder:text-black placeholder:italic outline-none", placeholder:"confirmé votre mot de passe ..." %>				
      </div>
      <div class="flex w-full py-4">
        <div class="mr-4">
          <p class="font-semibold">Vous êtes? :</p>
        </div>
        <%= f.radio_button :gender, value:'Femme' %> <span class="mx-2">Femme</span>
        <%= f.radio_button :gender, value:'Homme' %> <span class="mx-2">Homme</span>
      </div>
      <!-- component -->
    <div class="bg-white px-4 rounded-lg shadow-lg text-center w-48">
      <div class="mb-2">
        <%= image_tag("logo/logo-action.png", class:"w-32 mx-auto rounded-full object-cover object-center", alt:"Avatar Upload") %>
      </div>
      <label class="cursor-pointer mt-2">
        <span class="mt-2 text-base leading-normal px-4 py-2 bg-blue-500 text-white text-sm rounded-full" >Photo profil :</span>
        <%= f.file_field :avatar, class:"hidden" %>
      </label>
    </div>
  
      <%= f.hidden_field :category, value:"Admin" %>
      <%= f.hidden_field :terms, value:"oui" %>
      <%= f.hidden_field :newletter, value:"oui" %>
           
      <%= f.submit "Crée un compte admin", class:"block w-full bg-green-600 mt-2 py-2 pb-2 rounded-2xl text-white font-semibold mb-2" %>
		<% end %>
	</div>
</div>
