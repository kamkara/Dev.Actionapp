<%= form_with(model: benevol) do |f| %>
    <% if benevol.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(benevol.errors.count, "error") %>
                prohibited this benevol from being saved:</h2>

            <ul>
                <% benevol.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="my-2">

        <%= f.text_field :full_name, label:"Nom du Bénévol:", 
    class:"form-control focus-none p-2 border rounded-md",
     placeholder:'Nom et Prénom ...' %>
    </div>

    <div>

        <%= f.text_field :role , class:"form-control focus-none p-2 border rounded-md", label:"Role du Bénévol:", placeholder:" Role ..." %>
    </div>

    <div class="mt-2">
        <%= f.text_field :link_fb, class:"form-control focus-none p-2 border rounded-md", label:"Adresse du compte Facebook:", placeholder:" URL facebook ..." %>
    </div>

    <div class="my-2">
        <%= f.text_field :link_tw, class:"form-control focus-none p-2 border rounded-md", label:"Adresse du compte Twitter:", placeholder:" URL Twitter ..." %>
    </div>
    <div class="my-2">
      <%= f.text_field :link_lkin, class:"form-control focus-none p-2 border rounded-md", label:"Adresse du compte LinkedIn:", placeholder:" URL LinkedIn ..." %>
    </div>

  
    <!-- component -->
      <div class="flex ">
        <div class=" flex   mt-2 rounded-lg text-center w-56">
          <div class="mb-2 mr-10">
            <%= image_tag("logo/logo-action.png", 
                    class:"h-10 w-10 rounded-full object-cover object-center ml-10",
                    alt:"Avatar Upload") %>
              <br>
              <label class="cursor-pointer">
                  <span class="mt-2 text-base leading-normal p-2 bg-blue-500 text-white text-sm rounded-full">La photo Couverture:</span>
                  <%= f.file_field :img, class:"hidden" %>
              </label>
          </div>
        </div>
        
<div class=" ml-10">
    <%= f.label 'Status:' %>
    <br>
        <%= f.select(:status, Benevol::STATUS, { prompt: "Choisir" }, class:" p-2 bg-white rounded-none w-full select") %>
    </div>

      </div>
    <div>
        <%= f.submit "Ajouter N. Benevol", class:"font-bold p-2 border rounded-md bg-green-500 font-semibold text-white my-2"  %>
    </div>
<% end %>

