

    <h1 class="text-center font-bold text-2xl text-indigo-500">Liste des projets </h1>

        
    <% @ProjetsList.each do |proj| %>
            <!-- Card 1 -->
            <div class="bg-white rounded-lg border shadow-md max-w-xs md:max-w-none overflow-hidden my-1">
                <div class="p-3">
                    <span class="text-sm text-primary"><%= proj.start_date %></span>
                    <h3 class="font-semibold text-xl leading-6 text-gray-700 my-2">
                    <%= proj.title %>
                    </h3>
                    
                    <%= link_to projet_path(proj), class:"hover:text-black text-black no-underline" do %>
                        <%= truncate(strip_tags(proj.content.to_s.html_safe), length: 400) %>
                        <span class="bg-blue-300" id=start-reading><i class="mx-2">Lire plus >> </i></span>
                    <% end %>
                </div>
            </div>
    <% end %>
        
