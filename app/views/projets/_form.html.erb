<div class="bg-white p-4 m-4">
<%= form_for( @projet) do |f| %>

    <% if @projet.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(projet.errors.count, "error") %>
                prohibited this article from being saved:</h2>

            <ul>
                <% @projet.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class=" mt-2">
        <%= f.text_field  :title, 
            class:"w-full p-2 border rounded-md outline-blue-500",
            placeholder:"Titre de l'activité ..."  %>
    </div>

    <div class="my-8 bg-white p-1">
        <%= f.rich_text_area :content, hide_label:true,
        class:"border rounded-md outline-blue-500 ",
        placeholder:"Contenu ..."  %>
    </div>

    <div class="flex w-full">
        <div class="flex justify-between mx-4 my-4">
            <!-- component -->
            <div class="mb-2 mr-10">
                <%= image_tag("logo/logo-action.png", 
                    class:"h-10 w-10 rounded-full object-cover object-center ml-10 outline-blue-500",
                    alt:"Avatar Upload") %>
                <br>
                    <label class="cursor-pointer">
                        <span class="mt-2 text-base leading-normal px-4 py-2  bg-blue-500
                                text-white text-sm rounded-full">La Couverture:</span>
                        <%= f.file_field :heroImg, class:"hidden" %>
                    </label>
                </div>

                <div class="">
                    <%= f.label "Date Lancément:" %>
                    <br>
                    <%= f.date_field :published, class:" p-2 border rounded-md outline-blue-500" %>
                    </div>

                    <div class=" ml-10">
                        <%= f.label 'Le Budget:' %>
                        <br>
                            <%= f.text_field  :amount, 
                            class:"outline-blue-500 p-2 border rounded-md", placeholder:"Le montant ..."  %>
                        </div>

                        <div class=" ml-10">
                            <%= f.label 'Status:' %>
                            <br>
                                <%= f.select(:status, Projet::STATUS, { prompt: "Choisir" }, class:" p-2 bg-white outline-blue-500 rounded-none w-full select") %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions -mt-4 ml-12">
                <%= f.submit "Créer l'activité", class:"font-bold p-2 border rounded-md bg-blue-500 text-white my-2" %>
            </div>

        <% end %>
</div>

