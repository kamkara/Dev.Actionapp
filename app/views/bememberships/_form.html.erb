<% @title="Adhésion Action+" %>

<!-- component -->
<div class="h-screen md:flex">
    <div class="relative overflow-hidden md:flex w-1/3 bg-gradient-to-tr from-green-400 to-blue-600 i justify-around items-center hidden">
        <div class="container">

            <h1 class="text-white font-bold text-4xl font-sans">
                <div class="before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-pink-500 relative inline-block">
                    <p class="relative text-white">Adhésion a Action<sup>+</sup>
                    </p>
                </div>
            </h1>
            <p class="text-black mt-1">Vous voulez contribuer à sauver des vies ?
                <br>
                    Rejoignez les Adherants d'Action<sup>+</sup>
                    !
                    <br>
                        <span class="font-semibold underline">
                            C'est facile, gratuit et 1 minute suffira.</span>
                    </p>


                </div>
                <div class="absolute -bottom-32 -left-40 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
                <div class="absolute -bottom-40 -left-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
                <div class="absolute -top-40 -right-0 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
                <div class="absolute -top-20 -right-20 w-80 h-80 border-4 rounded-full border-opacity-30 border-t-8"></div>
            </div>
            <div class="flex md:w-2/3 justify-center  items-center bg-white mx-2">

<%= form_with(model: bemembership , class:"form") do |f| %>

                    <h1 class="text-gray-800 font-bold text-2xl ">Vous et Action<sup>+</sup>
                        Agisons Ensemble pour sauver des vies</h1>
                    <p class="text-sm font-normal text-gray-600 ">Devenez Membre Adherant d'Action<sup>+</sup>
                    </p>
                    <% if bemembership.errors.any? %>
                        <div style="color: red">
                            <h2><%= pluralize(bemembership.errors.count, "erreur") %>
                                trouvée. Veillez rectifier les points:</h2>

                            <ul>
                                <% bemembership.errors.each do |error| %>
                                    <li><%= error.full_message %></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                    <div class=" form-control mx-2">
                        <div class="form-outline flex items-center mt-6 my-2">
                            <%= f.text_field :first_name, class:"form-control p-2 mr-2",
                             placeholder:"Nom" %>
                            <%= f.text_field :last_name, class:" form-control p-2 ",
                             placeholder:"Prénom" %>
                        </div>

                        <%= f.email_field :email, placeholder:"Addresse Email",
                         class:"form-control p-2" %>

                        <div class="form-outline flex items-center my-2">
                            <%= f.text_field :country, class:"form-control p-2 mr-2",
                             placeholder:"Pays de résidence" %>

                            <%= f.text_field :citytown, class:"form-control p-2",
                             placeholder:"Ville de résidence" %>
                        </div>

                        <div class="form-outline flex items-center my-2">
                            <%= f.text_field :contact, class:"p-2 form-control mr-2",
                                placeholder:"N° Tel + Indicatif pays" %>
                            <%= f.text_field :nationality, class:"form-control p-2",
                            placeholder:"Votre Nationalité" %>
                        </div>

                        <div class="flex w-full my-2">
                            <div class="mr-4">
                                <p class="font-semibold">Salarié? :</p>
                            </div>
                            <%= f.radio_button :employer, 'Non', checked: true%>
                            <span class="mx-2">Non</span>
                            <%= f.radio_button :employer, 'Oui' %>
                            <span class="mx-2">Oui</span>
                            <%= f.radio_button :employer, 'Entrepreneur' %>
                            <span class="mx-2">Entrepreneur</span>
                        </div>
                        <%= f.text_field :profession, class:"form-control p-2", 
                            placeholder:"Votre Profession" %>

                        <div class="flex w-full my-2">
                            <div class="mr-4">
                                <p class="font-semibold">Matrimoniale? :</p>
                            </div>
                            <%= f.radio_button :matrimonial, 'Mademoiselle', checked: true , class:"mx-2"%>
                            <span class="mr-2">Mlle</span>
                            <%= f.radio_button :matrimonial, 'Madame', class:"mx-2" %>
                            <span class="mr-2">Mme</span>
                            <%= f.radio_button :matrimonial, 'Monsieur' %>
                            <span class="">M.</span>
                        </div>

                        <div class="flex w-full">
                            <div class="mr-4">
                                <p class="font-semibold">Vous êtes? :</p>
                            </div>
                            <%= f.radio_button :gender, 'Femme' , checked: true, class:"mx-2"%>
                            <span class:"mr-2">Femme</span>
                            <%= f.radio_button :gender, 'Homme', class:"mx-2"%>
                            <span class="">Homme</span>
                        </div>
                        <div class="w-full my-2">
                            <div class="">
                                <p class="font-semibold sm:text-sm">Comment avez vous connu Action<sup class="">+</sup>
                                    ? :
                                    <br></p>
                                </div>
                                <%= f.radio_button :source, 'Ami' , checked: true , class:"ml-2" %>
                                <span class="mr-2">Ami(e)</span>
                                <%= f.radio_button :source, 'Réseau_Sociaux' %>
                                <span class="mr-2">Réseau Sociaux</span>
                                <%= f.radio_button :source, 'Autres' %>
                                <span class="mx-2">Autres</span>

                            </div>


                            <div class="flex items-center  py-2 ">
                                <%= f.check_box :terms, value:"oui", class:" mr-4", checked:true %>
                                <p class="text-sm">

                                    Oui, j'adhère à
                                    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-1" class="font-semibold underline">
                                        la charte des valeurs</a>,
                                    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-2" class="font-semibold underline">
                                        aux statuts</a>
                                    et
                                    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-3" class="font-semibold underline">
                                        aux règles de fonctionnement d'Action</a>
                                    <sup class="">+</sup>, ainsi qu'aux
                                    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-4" class="font-semibold underline">conditions générales d'utilisation
                                    </a>
                                    <span class="no-underline ">et à la politique
                                                    de</span>
                                    <a type="button" data-bs-toggle="modal" data-bs-target="#exampleModal-5" class="font-semibold underline ml-1">
                                        protection des données
                                    </a>
                                    de la plateforme.
                                </p>
                            </div>
                            <div>
                                <%= f.submit "Oui j'adhère", 
                                class:"uppercase block w-full bg-green-600 mt-2 py-2 
                                rounded-xl text-white font-semibold mb-2 " %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>


            <!-- Modal Privacy-->
            <div class="modal fade" id="exampleModal-1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-semibold" id="exampleModalLabel">Résumé: Chartes des valeurs</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Le Résumé s'affichera ici
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary bg-gray-100 text-black " data-bs-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Charte -->
            <div class="modal fade" id="exampleModal-2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-semibold" id="exampleModalLabel">Résumé des Status<sup class="">+</sup>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Le Résumé s'affichera ici
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary bg-gray-100 text-black " 
                            data-bs-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal règles de fonctionnement d'Action-->
            <div class="modal fade" id="exampleModal-3" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-semibold" id="exampleModalLabel">Résumé: Règles de fonctionnement d'Action<sup class="">+</sup>
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Le Résumé s'affichera ici
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary bg-gray-100 text-black " data-bs-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal CGU-->
            <div class="modal fade" id="exampleModal-4" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-semibold" id="exampleModalLabel">Résumé: Les conditions générale d'utilisation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Le Résumé s'affichera ici
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary bg-gray-100 text-black " data-bs-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal CGU-->
            <div class="modal fade" id="exampleModal-5" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-semibold" id="exampleModalLabel">Résumé: protection des données</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Le Résumé s'affichera ici
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary bg-gray-100 text-black " data-bs-dismiss="modal">Fermer</button>

                        </div>
                    </div>
                </div>
            </div>
